<main class="centered">
  <h1><%= product.title%></h1>
  <hr />
  <div>
    <img src="<%= product.imgUrl%>" alt="<%= product.title%>" />
  </div>
  <h2>$<%= product.price%></h2>
  <p><%= product.description%></p>
  <form action="/cart" method="POST">
    <input type="hidden" name="productId" value="<%= product.id %>" />
    <button class="btn">Add to Cart</button>
  </form>
</main>
