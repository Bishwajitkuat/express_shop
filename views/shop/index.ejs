<%- include("../components/head.ejs") %> <%-
include("../components/navbar.ejs")%>
<main class="main">
  <h1 class="text-[3rem] text-center pb-[3rem] tracking-wide">
    Wellcom to express shop
  </h1>
  <h2 class="text-[1.5rem] text-center pb-[3rem]">
    Sell your old stuff && buy stuff cheap!!!
  </h2>
  <% if(errorMessage){ %>
  <p class="error_message">Error: <%= errorMessage %></p>
  <%}%> <% if(successMessage){ %>
  <p class="success_message"><%= successMessage %></p>
  <%}%> <% if (products && products.length > 0) { %>
  <div class="grid md:grid-cols-3 gap-8">
    <% for (let product of products){ %>
    <article class="product_cart_parent">
      <div class="product_cart">
        <h1 class="product_cart_heading"><%= product.title%></h1>
        <img
          class="product_cart_img"
          src="<%= product.imgUrl%>"
          alt="<%= product.title%>"
        />
        <h2 class="product_cart_subheading">â‚¬<%=product.price%></h2>
        <h2 class="product_cart_description">
          Seller: <%=product.userId.name%>
        </h2>
        <p class="product_cart_description"><%= product.description%></p>

        <div class="product_cart_btn_div">
          <%- include("../components/add-to-cart.ejs", {product}) %>
        </div>
      </div>
    </article>
    <%} %>
  </div>
  <% } else { %>
  <div class="h-full flex justify-center items-center">
    <h3 class="text-[1.2rem] text-red-400">
      Currently no product is available!
    </h3>
  </div>
  <% } %>
</main>
<%- include("../components/footer.ejs")%>
