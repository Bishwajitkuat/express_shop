<main>
  <form class="product-form" action=<%= editing ? "/admin/edit-product":"/admin/add-product"; %> method="POST">
    <div class="form-control">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" <% if(editing){ %>
        value="<%= product.title %>"
      <%}else{''}%>/>
    </div>
    <div class="form-control">
      <label for="price">Price (â‚¬)</label>
      <input type="number" name="price" id="price" <% if(editing){ %>
        value="<%= product.price %>"
      <%}else{''}%> />
    </div>
    <div class="form-control">
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="10"><%if(editing){%><%=product.description%><%}else{''}%></textarea>
    </div>
    <div class="form-control">
      <label for="imgUrl">Image URL</label>
      <input type="imgUrl" name="imgUrl" id="imgUrl" <% if(editing){ %>
        value="<%= product.imgUrl %>"
      <%}else{''}%> />
    </div>
    <button class="btn" type="submit"><%= editing ? "Update Product": "Add Product"; %></button>
  </form>
</main>
