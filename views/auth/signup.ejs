<%- include("../components/head.ejs") %> <%-
include("../components/navbar.ejs")%>
<main
  class="flex-grow bg-gray-900 text-slate-400 px-[5rem] py-[3rem] flex justify-center"
>
  <form class="flex items-center gap-4 flex-col" action="/signup" method="POST">
    <h1 class="text-[3rem] text-center pb-[3rem] tracking-wide">
      Wellcom to express shop
    </h1>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="email">Name</label>
      <input
        class="rounded bg-slate-300 px-[1rem] py-[0.5rem] text-gray-950"
        type="text"
        name="name"
        id="name"
      />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="email">Email</label>
      <input
        class="rounded bg-slate-300 px-[1rem] py-[0.5rem] text-gray-950"
        type="text"
        name="email"
        id="email"
      />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="password"
        >Password</label
      >
      <input
        class="rounded bg-slate-300 px-[1rem] py-[0.5rem] text-gray-950"
        type="text"
        name="password"
        id="password"
      />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="password"
        >Confirm password</label
      >
      <input
        class="rounded bg-slate-300 px-[1rem] py-[0.5rem] text-gray-950"
        type="text"
        name="confirmPassword"
        id="confirmPassword"
      />
    </div>
    <button
      class="bg-slate-700 w-full px-[1rem] py-[0.5rem] rounded shadow-sm text-slate-200 hover:bg-gradient-to-br from-yellow-300 to-red-400 hover:text-gray-900"
      type="submit"
    >
      Signup
    </button>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  </form>
</main>
<%- include("../components/footer.ejs")%>
