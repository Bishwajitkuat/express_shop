<%- include("../components/head.ejs") %> <%-
include("../components/navbar.ejs")%>
<main class="main flex justify-center">
  <form class="flex items-center gap-4 flex-col" action="/signup" method="POST">
    <h1 class="text-[3rem] text-center pb-[3rem] tracking-wide">
      Wellcom to express shop
    </h1>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="email">Name</label>
      <input class="text_input_base" type="text" name="name" id="name" />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="email">Email</label>
      <input class="text_input_base" type="text" name="email" id="email" />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="password"
        >Password</label
      >
      <input
        class="text_input_base"
        type="text"
        name="password"
        id="password"
      />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="password"
        >Confirm password</label
      >
      <input
        class="text_input_base"
        type="text"
        name="confirmPassword"
        id="confirmPassword"
      />
    </div>
    <button class="btn" type="submit">Signup</button>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  </form>
</main>
<%- include("../components/footer.ejs")%>
