<%- include("../components/head.ejs") %> <%-
include("../components/navbar.ejs")%>
<main class="main flex justify-center">
  <form
    class="flex items-center gap-[2rem] flex-col"
    action="/set-new-password"
    method="POST"
  >
    <h1 class="page_heading">Reset you password</h1>
    <% if(errorMessage){ %>
    <p class="error_message"><%= errorMessage %></p>
    <%}%> <% if(allowResetting===true){ %>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="password"
        >Password</label
      >
      <input
        class="text_input_base"
        type="password"
        name="password"
        id="password"
        value="<%=oldValues?.password%>"
      />
      <% if(errors?.password){ %>
      <p class="error_message text-left"><%= errors?.password %></p>
      <%}%>
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="confirmPassword"
        >Confirm password</label
      >
      <input
        class="text_input_base"
        type="password"
        name="confirmPassword"
        id="confirmPassword"
        value="<%=oldValues?.confirmPassword%>"
      />
      <% if(errors?.confirmPassword){ %>
      <p class="error_message text-left"><%= errors?.confirmPassword %></p>
      <%}%>
    </div>
    <button class="btn" type="submit">Set password</button>
    <input type="hidden" name="token" value="<%=token%>" />
    <%}%>
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
  </form>
</main>
<%- include("../components/footer.ejs")%>
