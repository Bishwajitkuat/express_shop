<%- include("../components/head.ejs") %> <%-
include("../components/navbar.ejs")%>
<main class="main flex justify-center">
  <form
    class="flex items-center gap-[2rem] flex-col"
    action="/set-new-password"
    method="POST"
  >
    <h1 class="text-[3rem] text-center pb-[3rem] tracking-wide">
      Reset you password
    </h1>
    <% if(errorMessage){ %>
    <p class="error_message"><%= errorMessage %></p>
    <%}%> <% if(allowResetting===true){ %>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="password"
        >Password</label
      >
      <input
        class="text_input_base"
        type="text"
        name="password"
        id="password"
      />
    </div>
    <div class="w-full flex gap-2 flex-col">
      <label class="text-[1.2rem] tracking-widest" for="confirmPassword"
        >Confirm password</label
      >
      <input
        class="text_input_base"
        type="text"
        name="confirmPassword"
        id="confirmPassword"
      />
    </div>
    <button class="btn" type="submit">Set password</button>
    <input type="hidden" name="token" value="<%=token%>" />
    <%}%>
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
  </form>
</main>
<%- include("../components/footer.ejs")%>
